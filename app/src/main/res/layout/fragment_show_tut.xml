<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/prev_tut_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/buttonfloatslideback" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/showtut_rellay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/showtut_head"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:text="HEADING"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="26dp"
            android:textColor="@color/actionbar"
            android:fontFamily="@font/beautifulpeople"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/showtut_photo"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/showtut_head"
            android:src="@color/actionbar"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/showtut_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/showtut_photo"
            android:layout_centerHorizontal="true"
            android:textSize="24dp"
            android:text="abcd"
            android:textColor="@color/lightcolorlogo"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"/>

    </RelativeLayout>

    </ScrollView>

</RelativeLayout>