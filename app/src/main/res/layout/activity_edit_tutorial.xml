<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditTutorial">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_centerHorizontal="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/edit_tut_head"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/actionbardark"
            android:hint="Enter Heading"
            android:textColorHint="@color/actionbar"
            android:textColor="@color/actionbardark"/>

        <ImageView
            android:id="@+id/edit_tut_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/edit_tut_head"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@color/actionbardark"/>

        <EditText
            android:id="@+id/edit_tut_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textMultiLine"
            android:layout_below="@id/edit_tut_image"
            android:textColor="@color/actionbardark"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/actionbar"/>

        <Button
            android:id="@+id/edit_tut_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_tut_desc"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>


    </RelativeLayout>

    </ScrollView>



</RelativeLayout>