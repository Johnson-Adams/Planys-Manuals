<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="30dp"
    tools:context=".EditDosNDonts">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/dnd_do_tit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="DO :"
                android:textSize="30sp"
                android:textColor="@color/actionbardark"/>

            <ImageView
                android:id="@+id/edit_dnd_do_img"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@+id/dnd_do_tit"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/addnewimage" />

            <EditText
                android:id="@+id/edit_dnd_do_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_dnd_do_img"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:backgroundTint="@color/actionbardark"
                android:hint="Enter Text"
                android:textColorHint="@color/actionbar"
                android:layout_centerHorizontal="true">

            </EditText>


            <TextView
                android:id="@+id/dnd_dont_tit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_dnd_do_text"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="DONT :"
                android:textSize="30sp"
                android:textColor="@color/actionbardark" />

            <ImageView
                android:id="@+id/edit_dnd_dont_img"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@id/dnd_dont_tit"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/addnewimage" />

            <EditText
                android:id="@+id/edit_dnd_dont_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_dnd_dont_img"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="40dp"
                android:backgroundTint="@color/actionbar"
                android:hint="Enter Text"
                android:textColorHint="@color/actionbar"
                android:textColor="@color/actionbardark"/>

            <Button
                android:id="@+id/edit_dnd_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/edit_dnd_dont_text"
                android:layout_marginTop="30dp"
                android:background="@drawable/savenewpointindnd"/>


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>