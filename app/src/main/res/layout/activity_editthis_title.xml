<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditthisTitle">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/submittitlebuttonafteredit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edittitle"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/submitnewtopic" />

        <Button
            android:id="@+id/deletetitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="35dp"
            android:layout_below="@+id/edittitle"
            android:layout_marginTop="20dp"
            android:background="@drawable/deletetopic" />

        <EditText
            android:id="@+id/edittitle"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView111"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/lightcolorlogo"
            android:ems="10"
            android:hint="Give Name for your Title"
            android:inputType="textPersonName"
            android:textColor="@color/lightcolorlogo"
            android:textColorHint="@color/lightcolorlogo" />

        <TextView
            android:id="@+id/imageView111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="EDIT YOUR TITLE"
            android:textSize="19dp"
            android:textColor="@color/actionbardark"/>

        <TextView
            android:id="@+id/abouttitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About this Title :"
            android:layout_below="@id/submittitlebuttonafteredit"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:ems="20"
            android:textSize="18sp"
            android:textColor="@color/actionbar"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/abouttitle"
            android:layout_alignStart="@id/abouttitle"
            android:layout_marginEnd="50dp">

            <TableRow>

                <TextView
                    android:id="@+id/titlecreatedby"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Created By :"
                    android:paddingTop="20dp"
                    android:textColor="@color/lightcolorlogo"
                    android:paddingLeft="20dp"
                    android:textSize="17dp"/>

                <TextView
                    android:id="@+id/titlecreatedbyempid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:textColor="@color/lightcolorlogo"
                    android:paddingLeft="5dp"/>

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/titlecreateddate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Created On :"
                    android:textSize="17dp"
                    android:textColor="@color/lightcolorlogo"
                    android:paddingTop="10dp"
                    android:paddingLeft="20dp"/>

                <TextView
                    android:id="@+id/titlecreatedatebyempid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="34/32/2347"
                    android:textColor="@color/lightcolorlogo"
                    android:textSize="17dp"/>

            </TableRow>


            <TableRow>

                <TextView
                    android:id="@+id/titleupdateddate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recently Updated On :"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/lightcolorlogo"
                    android:textSize="17dp"/>

                <TextView
                    android:id="@+id/titleupdateddatebyempid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22/34/3411"
                    android:paddingLeft="5dp"
                    android:textColor="@color/lightcolorlogo"
                    android:textSize="17dp"/>
            </TableRow>
        </TableLayout>

    </RelativeLayout>

    </ScrollView>

</RelativeLayout>